root=true
# top-most EditorConfig file


# Code files
[{src,test}/**.{cs,csx,js,jsx,ts,tsx,html,cshtml}]
charset=utf-8
end_of_line=crlf
indent_size=4
indent_style=space
insert_final_newline=true
trim_trailing_whitespace=true:none

# Microsoft .NET properties
csharp_new_line_before_members_in_object_initializers=false

# ReSharper properties
resharper_csharp_wrap_chained_method_calls=chop_if_long
resharper_csharp_wrap_multiple_type_parameter_constraints_style=chop_always
resharper_keep_existing_declaration_parens_arrangement=false
resharper_place_constructor_initializer_on_same_line=false
resharper_place_field_attribute_on_same_line=false
resharper_place_simple_embedded_statement_on_same_line=false
resharper_space_within_single_line_array_initializer_braces=true
resharper_wrap_object_and_collection_initializer_style=chop_always


[{src,test}/**.{cs}]
# Dotnet Code Style Settings
# "This." and "Me." Qualification
# Fields
dotnet_style_qualification_for_field=false:suggestion
# Properties
dotnet_style_qualification_for_property=false:suggestion
# Methods
dotnet_style_qualification_for_method=false:suggestion
# Events
dotnet_style_qualification_for_event=false:suggestion

# Language keywords (int, string, etc. ) vs framework type names for type references
# Locals, parameters, and members
dotnet_style_predefined_type_for_locals_parameters_members=true:suggestion
# dotnet_style_predefined_type_for_member_access = true:suggestion
dotnet_style_object_initializer=true:suggestion

# Expression-level Preferences
# Object initializers
dotnet_style_object_initializer=true:suggestion
# Collection initializers
dotnet_style_collection_initializer=true:suggestion
# Explicit tuple names
dotnet_style_explicit_tuple_names=true:suggestion
# Coalescing expressions in "null" checking
dotnet_style_coalesce_expression=true:suggestion
# Null propagation in "null" checking
dotnet_style_null_propagation=true:suggestion

# CSharp Code Style Settings
# "var" for built-in types
csharp_style_var_for_built_in_types=true:suggestion
# "var" when type is apparent
csharp_style_var_when_type_is_apparent=true:suggestion
# "var" elsewhere
csharp_style_var_elsewhere=true:suggestion
# Methods
csharp_style_expression_bodied_methods=true:suggestion
# Constructors
csharp_style_expression_bodied_constructors=true:suggestion
# Operators
csharp_style_expression_bodied_operators=true:suggestion
# Properties
csharp_style_expression_bodied_properties=true:suggestion
# Indexers
csharp_style_expression_bodied_indexers=true:suggestion
# Accessors
csharp_style_expression_bodied_accessors=true:suggestion

# Pattern matching
# "is" with "cast" checking
csharp_style_pattern_matching_over_is_with_cast_check=true:suggestion
# "as" with "null" checking
csharp_style_pattern_matching_over_as_with_null_check=true:suggestion
# Inlined variable declarations
csharp_style_inlined_variable_declaration=true:suggestion

# "Null" Checking Preferences
# Throw-expressions
csharp_style_throw_expression=true:suggestion
# Prefer conditional delegate calls
csharp_style_conditional_delegate_call=true:suggestion

[*]

# Microsoft .NET properties
csharp_style_namespace_declarations=block_scoped:suggestion

# ReSharper properties
resharper_blank_lines_after_multiline_statements=1
resharper_blank_lines_before_block_statements=0
resharper_blank_lines_before_multiline_statements=0
resharper_csharp_insert_final_newline=true
resharper_csharp_max_line_length=245
resharper_csharp_wrap_chained_method_calls=chop_if_long
resharper_csharp_wrap_ternary_expr_style=chop_always
resharper_instance_members_qualify_declared_in=base_class
resharper_parentheses_non_obvious_operations=none, conditional_and, bitwise, bitwise_inclusive_or, bitwise_exclusive_or, shift, multiplicative, bitwise_and
resharper_parentheses_redundancy_style=remove
resharper_place_expr_property_on_single_line=true
